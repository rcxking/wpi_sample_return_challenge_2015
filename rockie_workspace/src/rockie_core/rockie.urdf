<!-- description of rockie's kinematics -->
<robot name="rockie">
  <!-- lower, back, right, corner of the frame -->
  <link name="corner">
  </link>

  <!-- the center of rotation for the robot at the height of the bottom of the frame -->
  <link name="base_link">
  </link>

  <joint name="corner_to_base_link" type="fixed">
    <parent link="corner"/>
    <child link="base_link"/>

    <!-- need actual values -->
    <origin xyz="0.5 0.2 0"/>
  </joint>

  <link name="arm_revolute">
  </link>

  <joint name="base_link_to_arm_revolute" type="revolute">
    <parent link="corner"/>
    <child link="arm_revolute"/>

    <!-- need actual limits -->
    <limit lower="0" upper="3.14159" effort="1.0" velocity="1.0"/>

    <!-- find actual origin: top of center of rotation of arm body -->
    <origin xyz="1 0.1 0.5"/>

    <axis xyz="0 0 1"/>
  </joint>

  <link name="arm_prismatic">
  </link>

  <joint name="arm_revolute_to_arm_prismatic" type="prismatic">
    <parent link="arm_revolute"/>
    <child link="arm_prismatic"/>

    <!-- need actual limits -->
    <limit lower="0" upper="0.5" effort="1.0" velocity="1.0"/>

    <!-- find actual origin -->
    <!-- center of rotation of gripper at same height as origin of revolute -->
    <origin xyz="0.2 0 0"/>

    <axis xyz="0 0 1"/>
  </joint>

  <link name="gripper">
  </link>

  <joint name="arm_prismatic_to_gripper" type="revolute">
    <parent link="arm_prismatic"/>
    <child link="gripper"/>

    <!-- need actual limits -->
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>

    <!-- find actual origin: end of gripper -->
    <origin xyz="0 0 -0.5"/>

    <axis xyz="0 0 1"/>
  </joint>
</robot>
